# Environment variables for Docker Compose
# Copy this file to .env and update with your values

# Timezone
TZ=Asia/Jakarta

# Node Environment
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=/app/memory/botwa.db

# MongoDB Configuration (if using MongoDB)
MONGO_ROOT_USERNAME=botwa_admin
MONGO_ROOT_PASSWORD=change_this_password_immediately
MONGO_DB_NAME=botwa
MONGO_USER=botwa_user
MONGO_PASSWORD=change_this_password_too

# Mongo Express (Web UI)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123

# Container Configuration
BOTWA_MEMORY_LIMIT=512m
BOTWA_MEMORY_RESERVATION=256m
