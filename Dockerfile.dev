FROM node:20-alpine

WORKDIR /app

# Install nodemon for hot reload
RUN npm install -g nodemon

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose ports
EXPOSE 3000 9229

# Use nodemon for development with ESM support
CMD ["nodemon", "--inspect=0.0.0.0:9229", "src/index.js"]
